<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_back"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="프로필 수정"
            android:textSize="18dp"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar_back">

                <LinearLayout
                    android:id="@+id/backgroun1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#FFC370"
                    android:orientation="vertical"/>

                <ImageView
                    android:id="@+id/userProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    app:srcCompat="@drawable/user" />

                <TextView
                    android:id="@+id/NicknameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userProfile"
                    android:layout_toLeftOf="@+id/PointView"
                    android:textColor="@color/black"
                    android:text="사용자 닉네임"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/PointView"
                    android:layout_below="@+id/userProfile"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="140dp"
                    android:text="포인트"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="닉네임을 입력해주세요." />

            <RelativeLayout
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_round"
                android:layout_marginTop="15dp"
                android:layout_below="@id/enter">

                <EditText
                    android:id="@+id/nickname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#aaa"
                    android:hint="닉네임을 입력하세요"
                    android:background="@android:color/transparent"
                    android:textColorHint="#aaa"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp"/>

            </RelativeLayout>


            <HorizontalScrollView
                android:id="@+id/profile_image"
                android:layout_below="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/level_1"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_1"/>

                    <ImageView
                        android:id="@+id/level_2"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_2"/>

                    <ImageView
                        android:id="@+id/level_3"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_3"/>

                    <ImageView
                        android:id="@+id/level_4"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_4" />

                    <ImageView
                        android:id="@+id/level_5"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_5" />

                    <ImageView
                        android:id="@+id/level_6"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_6" />

                    <ImageView
                        android:id="@+id/level_7"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_7" />

                    <ImageView
                        android:id="@+id/level_8"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_8" />

                    <ImageView
                        android:id="@+id/level_9"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_9" />

                    <ImageView
                        android:id="@+id/level_10"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_10" />

                    <ImageView
                        android:id="@+id/level_11"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_11" />

                    <ImageView
                        android:id="@+id/level_12"
                        android:layout_width="300dp"
                        android:layout_height="500dp"
                        android:layout_margin="30dp"
                        android:src="@drawable/level_12" />

                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:id="@+id/save_nickname"
                android:layout_below="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_round_color"
                android:textColor="@color/black"
                android:layout_marginBottom="40dp"
                android:text="저장" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>